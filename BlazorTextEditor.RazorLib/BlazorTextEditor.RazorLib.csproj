<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <Product>Blazor Text Editor</Product>
        <Description>A text editor written using Blazor. Contains API for syntax highlighting.</Description>
        <PackageId>Blazor.Text.Editor</PackageId>
        <Version>1.0.0</Version>
        <Authors>Hunter Freeman</Authors>
        <Company>Personal</Company>
        <PackageTags>DotNet CSharp Blazor RazorComponents</PackageTags>
    </PropertyGroup>


    <ItemGroup>
        <SupportedPlatform Include="browser"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Fluxor.Blazor.Web" Version="5.5.0"/>
        <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.9"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\BlazorTextEditor.ClassLib\BlazorTextEditor.ClassLib.csproj">
            <ReferenceOutputAssembly>true</ReferenceOutputAssembly>
            <IncludeAssets>BlazorTextEditor.ClassLib.dll</IncludeAssets>
        </ProjectReference>
    </ItemGroup>

</Project>
