@using BlazorTextEditor.RazorLib.Row

<div class="bte_text-editor-footer @TextEditorService.GlobalThemeCssClassString">
    @{
        if (_textEditorBase is not null)
        {
            if (FileExtension is not null)
            {
                <div class="bte_text-editor-footer-entry">
                    @FileExtension
                </div>
            }

            <div class="bte_text-editor-footer-entry">
                length:@($"{_textEditorBase.DocumentLength}")
                &nbsp;
                lines:@($"{_textEditorBase.RowCount}")
            </div>

            if (_textEditorDisplay is not null)
            {
                <div class="bte_text-editor-footer-entry">
                    Ln:@($"{_textEditorDisplay.PrimaryCursor.IndexCoordinates.rowIndex}")
                    &nbsp;
                    Col:@($"{_textEditorDisplay.PrimaryCursor.IndexCoordinates.columnIndex}")
                </div>
            }

            <div class="bte_text-editor-footer-entry">
                @if (_textEditorBase.OnlyRowEndingKind is null)
                {
                    <text>has:mixed </text>
                }
                else
                {
                    <text>has:@_textEditorBase.OnlyRowEndingKind.Value.AsFriendlyName() </text>
                }

                use:
                <select @onchange="SelectRowEndingKindOnChange">
                    @foreach (var rowEndingKind in RowEndingKind.Linefeed.GetRowEndingsUserAllowedToUse())
                    {
                        <option value="@rowEndingKind.ToString()"
                                selected="@(_textEditorBase.UsingRowEndingKind == rowEndingKind)">
                            @rowEndingKind.AsFriendlyName()
                        </option>
                    }
                </select>
            </div>
        }
        else
        {
            <div class="bte_text-editor-footer-entry bte_text-editor-footer-file-sizing">
                textEditor is null
            </div>
        }
    }
</div>