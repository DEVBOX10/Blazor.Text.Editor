<div class="bte_notification"
     style="@CssStyleString">
    <div class="bte_notification-toolbar">
        <div class="bte_notification-title">
            @NotificationRecord.Title
        </div>

        <div class="bte_notification-control-buttons">
            <button class="bte_button" @onclick="DisposeNotification">
                <IconClose/>
            </button>
        </div>
    </div>

    <div class="bte_notification-body">
        <CascadingValue Value="NotificationRecord">
            <DynamicComponent Type="NotificationRecord.RendererType"
                              Parameters="NotificationRecord.Parameters"/>
        </CascadingValue>
    </div>
</div>