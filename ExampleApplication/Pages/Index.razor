@page "/"

@using BlazorTextEditor.RazorLib
@using ExampleApplication.TextEditorOptionsCase

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?"/>

<button class="btn btn-primary"
        @onclick="RegisterTextEditorOnClick">
    RegisterTextEditorOnClick
</button>

<div>
    Global Settings
    
    <TextEditorOptionsDisplay TextEditorOptions="TextEditorService.TextEditorStates.GlobalTextEditorOptions" />
</div>

@foreach (var textEditor in TextEditorService.TextEditorStates.TextEditorList)
{
    <TextEditorDisplay @key="textEditor.Key" 
                       TextEditorKey="textEditor.Key"
                       StyleCssString="width: 400px; height: 400px; margin-bottom: 20px;"
                       ShouldRemeasureFlag="_shouldRemeasureFlag" />
}



